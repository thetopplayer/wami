<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/wami_list_background"
	android:padding="6dp">

	<RelativeLayout
		android:id="@+id/search_list"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_centerVertical="true">

		<CheckBox android:id="@+id/checkbox1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:checked="false"
			android:focusable="false"
			android:focusableInTouchMode="false"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true">
		</CheckBox>

		<ImageView
			android:id="@+id/list_image"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="10dp"
			android:layout_marginTop="5dp"
			android:paddingBottom="5dp"
			android:layout_toRightOf="@id/checkbox1">
		</ImageView>

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/list_image"
			android:layout_centerVertical="true">

			<TextView
				android:id="@+id/list_text_profile_name_label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14sp"
				android:textStyle="bold"
				android:text="Profile Name: "
				android:textColor="#ff767676">
			</TextView>

			<TextView
				android:id="@+id/list_text_profile_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14sp"
				android:textStyle="bold|italic"
				android:ellipsize="end"
				android:maxLines="1"
				android:layout_toRightOf="@+id/list_text_profile_name_label"
				android:textColor="@color/text_color">
			</TextView>

			<TextView
				android:id="@+id/list_text_name_label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14sp"
				android:textStyle="bold"
				android:text="Contact Name: "
				android:textColor="#ff767676"
				android:layout_below="@+id/list_text_profile_name_label">
			</TextView>

			<TextView
				android:id="@+id/list_text_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14sp"
				android:textStyle="bold|italic"
				android:textColor="@color/text_color"
				android:layout_toRightOf="@+id/list_text_name_label"
				android:layout_below="@+id/list_text_profile_name_label">
			</TextView>

			<TextView
				android:id="@+id/list_text_rating_label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14sp"
				android:textStyle="bold"
				android:text="Profile Rating: "
				android:textColor="#ff767676"
				android:layout_below="@+id/list_text_name">
			</TextView>

			<TextView
				android:id="@+id/list_text_rating"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14sp"
				android:textStyle="bold|italic"
				android:textColor="@color/text_color"
				android:layout_toRightOf="@+id/list_text_rating_label"
				android:layout_below="@+id/list_text_name">
			</TextView>

			<TextView
				android:id="@+id/list_text_email_label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14sp"
				android:textStyle="bold"
				android:text="Email: "
				android:textColor="#ff767676"
				android:layout_below="@+id/list_text_rating">
			</TextView>

			<TextView
				android:id="@+id/list_text_email_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14sp"
				android:textStyle="bold|italic"
				android:textColor="@color/text_color"
				android:layout_toRightOf="@+id/list_text_email_label"
				android:layout_below="@+id/list_text_rating">
			</TextView>

			<Button
				android:id="@+id/list_more_info_btn"
				android:layout_width="68dp"
				android:layout_height="23dp"
				android:paddingBottom="7dp"
				android:textStyle="bold"
				android:textSize="10sp"
				android:textColor="#FFFFFF"
				android:background="@drawable/button_state"
				android:layout_marginTop="2dp"
				android:text="More Info"
				android:focusable="false"
				android:layout_below="@+id/list_text_email_label"/>
		</RelativeLayout>
	</RelativeLayout>
</RelativeLayout>

