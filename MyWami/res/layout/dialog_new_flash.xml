<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">

	<ImageView
			android:src="@drawable/dialog_header_new_flash"
			android:layout_width="match_parent"
			android:layout_height="34dp"
			android:scaleType="center"
			android:layout_marginBottom="10dp"
			android:background="#000000"/>

	<RelativeLayout
			android:layout_width="280dp"
			android:layout_height="180dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:gravity="center_horizontal">

		<TextView
				android:id="@+id/new_flash_heading"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				android:textStyle="bold"
				android:textSize="16sp"
				android:text="Create New Flash"
				android:layout_alignParentTop="true"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"/>

		<EditText
				android:id="@+id/new_flash_edit"
				android:layout_width="match_parent"
				android:layout_height="90dp"
				android:textSize="16sp"
				android:background="@drawable/edittext_background"
				android:padding="5dp"
				android:textColor="#000000"
				android:inputType="textMultiLine"
				android:lines="4"
				android:maxLength="110"
				android:hint="@string/new_flash"
				android:gravity="top"
				android:layout_marginBottom="15dp"
				android:layout_below="@+id/new_flash_heading"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"/>

		<ImageView
				android:id="@+id/line"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#aa000000"
				android:layout_below="@+id/new_flash_edit"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"
				android:layout_marginBottom="10dp"/>

		<Button
				android:layout_weight="1"
				android:id="@+id/save_flash_btn"
				android:layout_width="82dp"
				android:layout_height="30dp"
				android:text=" Create"
				android:textColor="#FFFFFF"
				android:textSize="16sp"
				android:background="@drawable/button_state"
				android:layout_marginLeft="40dp"
				android:layout_below="@+id/line"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"
				android:layout_marginBottom="10dp"/>

		<Button
				android:layout_weight="1"
				android:id="@+id/close_flash_btn"
				android:layout_width="82dp"
				android:layout_height="30dp"
				android:text=" Close"
				android:textColor="#FFFFFF"
				android:textSize="16sp"
				android:background="@drawable/button_state"
				android:layout_marginLeft="30dp"
				android:layout_below="@+id/line"
				android:layout_toRightOf="@+id/save_flash_btn"
				android:layout_marginBottom="10dp"/>

	</RelativeLayout>
</LinearLayout>
