<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:src="@drawable/dialog_header_confirm_request_profile"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:scaleType="center"
        android:layout_marginBottom="10dp"
        android:background="#000000"/>

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/confirm_msg"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:textSize="16sp"
            android:background="@drawable/edittext_background"
            android:padding="5dp"
            android:textColor="#000000"
            android:inputType="textMultiLine"
            android:lines="4"
            android:maxLength="110"
            android:gravity="top"
            android:layout_marginBottom="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/send_request_btn"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text=" Send Request(s)"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="@drawable/button_state"
            android:layout_marginLeft="25dp"
            android:layout_below="@+id/confirm_msg"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/close_send_request_btn"
            android:layout_width="82dp"
            android:layout_height="30dp"
            android:text=" Close"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="@drawable/button_state"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/confirm_msg"
            android:layout_toRightOf="@+id/send_request_btn"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>
</LinearLayout>
