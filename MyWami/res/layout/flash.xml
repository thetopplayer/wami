<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/flash_container"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#ffefefef" >

	<RelativeLayout
			android:id="@+id/flash_list"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">

		<TextView
				android:id="@+id/flash_list_date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14sp"
				android:textStyle="bold"
				android:paddingRight="5dp"
				android:paddingLeft="5dp"
				android:textColor="@color/text_color">
		</TextView>

		<ImageView
				android:id="@+id/flash_image"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="5dp"
				android:layout_toRightOf="@id/flash_list_date"/>

		<TextView
				android:id="@+id/flash_list_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14dp"
				android:textStyle="bold"
				android:textColor="@color/black"
				android:layout_toRightOf="@id/flash_image">
		</TextView>

	</RelativeLayout>

</LinearLayout>