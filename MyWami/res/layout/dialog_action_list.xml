<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="280dp"
              android:layout_height="250dp"
              android:background="@color/white">

	<ImageView
			android:src="@drawable/dialog_header_action_list"
			android:layout_width="match_parent"
			android:layout_height="34dp"
			android:scaleType="center"
			android:layout_marginBottom="10dp"
			android:background="#000000"/>

	<Button
			android:id="@+id/open_profile_info"
			android:layout_width="270dp"
			android:layout_height="30dp"
			android:text=" Profile Info "
			android:textColor="#000000"
			android:textSize="16sp"
			android:layout_marginLeft="5dp"
			android:background="@drawable/action_list_button_state"
			android:layout_marginTop="5dp"/>

	<Button
			android:id="@+id/open_profiler"
			android:layout_width="270dp"
			android:layout_height="30dp"
			android:text=" Profiler "
			android:textColor="#000000"
			android:textSize="16sp"
			android:layout_marginLeft="5dp"
			android:background="@drawable/action_list_button_state"
			android:layout_marginTop="5dp"/>

	<Button
			android:id="@+id/open_flash"
			android:layout_width="270dp"
			android:layout_height="30dp"
			android:text=" Flash Announcements "
			android:textColor="#000000"
			android:textSize="16sp"
			android:layout_marginLeft="5dp"
			android:background="@drawable/action_list_button_state"
			android:layout_marginTop="5dp"/>

	<Button
			android:id="@+id/open_profile_collection"
			android:layout_width="270dp"
			android:layout_height="30dp"
			android:text=" Profile Collection (home)"
			android:textColor="#000000"
			android:textSize="16sp"
			android:layout_marginLeft="5dp"
			android:background="@drawable/action_list_button_state"
			android:layout_marginTop="5dp"/>

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_margin="10dp"
			android:gravity="center_horizontal">

		<ImageView
				android:id="@+id/line"
				android:layout_width="match_parent"
				android:layout_height="2dp"
				android:layout_alignParentLeft="true"
				android:background="#aa000000" />

		<Button
				android:layout_weight="1"
				android:id="@+id/close_Action_list"
				android:layout_width="80dp"
				android:layout_height="30dp"
				android:text=" Close "
				android:textColor="#FFFFFF"
				android:textSize="16sp"
				android:background="@drawable/button_state"
				android:layout_marginTop="10dp"
				android:layout_below="@+id/line"/>
	</RelativeLayout>

</LinearLayout>