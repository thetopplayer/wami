<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:id="@+id/more_wami_info"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/wami_list_background">

    <RelativeLayout
        android:id="@+id/wami_info_extended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/wami_heading_image"
            android:layout_width="220dp"
            android:layout_height="180dp"
            android:paddingBottom="10dp"/>

        <ImageView
            android:id="@+id/wami_heading_icon_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingTop="60dp"
            android:src="@drawable/next_item_right"/>

        <ImageView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/wami_heading_image"
            android:background="#aa000000" />

        <TextView
            android:id="@+id/profile_name_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginTop="15dp"
            android:text="Profile Name"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/profile_name_title"
            android:layout_marginTop="3dp"
            android:background="@drawable/textfield_background"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#ff5c5c5c"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/description_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_name"
            android:layout_marginTop="15dp"
            android:text="Profile Description"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/description_title"
            android:layout_marginTop="3dp"
            android:background="@drawable/textfield_background"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#ff5c5c5c"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/contact_name_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:paddingTop="10dp"
            android:text="Contact Name"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/contact_name_title"
            android:layout_marginTop="3dp"
            android:background="@drawable/textfield_background"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#ff5c5c5c"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/email_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact_name"
            android:paddingTop="10dp"
            android:text="Email Address"
            android:textColor="#ff99cecd"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/email_title"
            android:layout_marginTop="3dp"
            android:background="@drawable/textfield_background"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#ff769c9b"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/telephone_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:paddingTop="10dp"
            android:text="Telephone"
            android:textColor="#FF99CECD"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/telephone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/textfield_background"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#FF769C9B"
            android:textSize="17sp"
            android:layout_below="@+id/telephone_title"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/profile_type_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/telephone"
            android:paddingTop="10dp"
            android:text="Profile Type"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profile_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/profile_type_title"
            android:layout_marginTop="3dp"
            android:background="@drawable/textfield_background"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#ff5c5c5c"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tags_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_type"
            android:paddingTop="10dp"
            android:text="Tags"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tags"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tags_title"
            android:layout_marginTop="3dp"
            android:background="@drawable/textfield_background"
            android:padding="5dp"
            android:textColor="#ff5c5c5c"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/groups_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tags"
            android:paddingTop="10dp"
            android:text="My Group(s)"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/groups"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/groups_title"
            android:layout_marginTop="3dp"
            android:background="@drawable/textfield_background"
            android:padding="5dp"
            android:textColor="#ff5c5c5c"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/street_address_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groups"
            android:paddingTop="10dp"
            android:text="Street Address"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/street_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/street_address_title"
            android:layout_marginTop="3dp"
            android:background="@drawable/textfield_background"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#ff5c5c5c"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/city_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/street_address"
            android:paddingTop="10dp"
            android:text="City"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/city_title"
            android:layout_marginTop="3dp"
            android:background="@drawable/textfield_background"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#ff5c5c5c"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/state_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city"
            android:paddingTop="10dp"
            android:text="State"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/state_title"
            android:layout_marginTop="3dp"
            android:background="@drawable/textfield_background"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#ff5c5c5c"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/zipcode_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/state"
            android:paddingTop="10dp"
            android:text="Zip Code"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/zipcode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/zipcode_title"
            android:layout_marginTop="3dp"
            android:background="@drawable/textfield_background"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#ff5c5c5c"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/country_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zipcode"
            android:paddingTop="10dp"
            android:text="Country"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/country"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/country_title"
            android:layout_marginTop="3dp"
            android:background="@drawable/textfield_background"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#ff5c5c5c"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/create_date_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/country"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="Profile Create Date" />

        <TextView
            android:id="@+id/create_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/create_date_title"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:textColor="#ff5c5c5c"
            android:textSize="17sp"
            android:padding="5dp"
            android:background="@drawable/textfield_background" />

        <TextView
            android:id="@+id/searchable_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/create_date"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="Profile Searchable?" />

        <TextView
            android:id="@+id/searchable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/searchable_title"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:textColor="#ff5c5c5c"
            android:textSize="17sp"
            android:padding="5dp"
            android:background="@drawable/textfield_background" />

        <TextView
            android:id="@+id/active_ind_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchable"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="Profile Status" />

        <TextView
            android:id="@+id/active_ind"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/active_ind_title"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:textColor="#ff5c5c5c"
            android:textSize="17sp"
            android:padding="5dp"
            android:background="@drawable/textfield_background" />
    </RelativeLayout>
</ScrollView>

